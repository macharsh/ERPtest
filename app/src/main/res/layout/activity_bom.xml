<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#C8EAEC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill of Materials (BOM)"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1E5470"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/btnAddBOM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add BOM"
        android:backgroundTint="#34729C"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnViewBOM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View BOM"
        android:backgroundTint="#34729C"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>
</LinearLayout>
