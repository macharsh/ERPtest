<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8EAEC"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reports Analytics"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E5470"
            android:layout_gravity="center"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Leads:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34729C"/>

        <TextView
            android:id="@+id/tvTotalLeads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textColor="#1E5470"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Converted Leads:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34729C"/>

        <TextView
            android:id="@+id/tvConvertedLeads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textColor="#1E5470"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Support Tickets:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34729C"/>

        <TextView
            android:id="@+id/tvOpenTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textColor="#1E5470"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Follow-ups:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34729C"/>

        <TextView
            android:id="@+id/tvPendingFollowUps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textColor="#1E5470"
            android:paddingBottom="10dp"/>

        <Button
            android:id="@+id/btnExportData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export Data"
            android:textColor="#FFFFFF"
            android:backgroundTint="#34729C"
            android:padding="12dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</ScrollView>
