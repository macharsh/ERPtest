<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#C8EAEC">

    <TextView
        android:id="@+id/tvCRMTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRM Dashboard"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1E5470"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/btnCustomerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Information"
        android:backgroundTint="#34729C"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnLeads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leads Management"
        android:backgroundTint="#34729C"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnFollowUps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Follow-ups"
        android:backgroundTint="#34729C"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnSupportTickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Support Tickets"
        android:backgroundTint="#34729C"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnLeadConversion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lead Conversion"
        android:backgroundTint="#34729C"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnReports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reports Analytics"
        android:backgroundTint="#34729C"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>



</LinearLayout>
