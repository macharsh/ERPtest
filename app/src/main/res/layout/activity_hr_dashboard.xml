<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HR Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/btnAddEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Employee"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnViewEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Employees"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Attendance"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnSalaryCalculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salary Calculation"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
