<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#C8EAEC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etRawMaterialName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#34729C"
            android:hint="Raw Material Name"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:backgroundTint="#34729C"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/etQuantityInStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#34729C"
            android:hint="Quantity in Stock"
            android:minHeight="48dp"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnSaveRawMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Raw Material"
            android:backgroundTint="@color/sky_blue"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</ScrollView>
