<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/light_cyan">

    <Spinner
        android:id="@+id/spinnerEmployeeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Employee"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etSalaryPerDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Salary Per Day"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnCalculateSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Salary"
        android:background="#1E5470"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

</LinearLayout>

