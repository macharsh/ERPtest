<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#C8EAEC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1E5470"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/btnWarehouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Warehouses"
        android:backgroundTint="#34729C"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Stock"
        android:backgroundTint="#34729C"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnStockTransfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock Transfer"
        android:backgroundTint="#34729C"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnAlerts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Stock Alerts"
        android:backgroundTint="#34729C"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnExportData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Data"
        android:backgroundTint="#6CB1DA"
        android:textColor="#FFFFFF"
        android:padding="12dp"/>
</LinearLayout>
